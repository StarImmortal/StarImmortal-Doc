th, td
  border none
  padding-right 0
tr
  border-top none

pre.vue-container
  border-left-width: .5rem;
  border-left-style: solid;
  border-color: #3683d6;
  border-radius: 0px;
  & > code
    font-size: 14px !important;
    & > p
      margin: -5px 0 -20px 0;
    code
      background-color: #3683d6 !important;
      padding: 3px 5px;
      border-radius: 3px;
      color #000
    em
      color #808080
      font-weight light
